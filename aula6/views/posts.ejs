<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <%-include ('partials/head.ejs') %>
  </head>
  
<body>

  <%-include('partials/header.ejs')  %>

  <h1>Pagina de Posts</h1>
  <h2>Posts</h2>

<div class="posts">
  <% posts.forEach((item)=>{ %>
    <div class="post">
      <h3><%= item.title %></h3>
      <p><%= item.text %></p>

      <% if(item.stars){%>
        <% for( let index = 0; index < item.stars; index++ ) { %>
          <img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Star_icon_stylized.svg" alt="star">
        <% } %>
      <% } %>
    </div>
  <%  }) %>
    
</div>


</body>



  <%-include ('partials/footer.ejs')  %>
  <%-include ('partials/foot.ejs')  %>
</html>